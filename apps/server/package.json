    "@types/superagent": "^3.8.5",
    "async-lock": "^1.1.3",
    "babel-polyfill": "^6.26.0",
    "better-queue": "^3.8.10",
    "cheerio": "^1.0.0-rc.2",
    "classnames": "^2.2.5",
    "express": "^4.16.3",
    "superagent": "^4.0.0",
    "superagent-cheerio": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
