{
  "name": "server",
  "version": "1.0.0",
  "description": "Boilerplate to build a full stack web application using React, Node.js, Express and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "node": "ts-node src/server/index.ts",
    "build": "webpack --mode production",
    "start": "npm run build && ts-node src/server/index.ts",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/index.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "concurrently \"npm run server-test\" ",
    "server-test": "ts-mocha -p tsconfig.json src/tests/server/**/*.ts"
  },
  "author": "Sandeep Raveesh",
  "license": "ISC",
