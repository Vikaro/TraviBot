    "@types/better-queue": "^3.8.0",
    "@types/chai": "^4.1.7",
    "@types/expect": "^1.20.3",
    "@types/mocha": "^5.2.5",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "chai": "^4.2.0",
    "file-loader": "^2.0.0",
    "mocha": "^5.2.0",
    "chai-spies": "^1.0.0",
    "nodemon": "^1.17.3",
    "ts-mocha": "^2.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
